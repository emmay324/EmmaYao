public class Planet {
    private final int orbitTime;
    private final ArrayList<Moon> moons = new ArrayList<>();
    private final String designation;

    public Planet(int orbitTime, String designation) {
        super();
        this.orbitTime = orbitTime;
        this.designation = designation;
    }

    public String getDesignation() {
        return this.designation;
    }

    public int getOrbitTime() {
        return this.orbitTime;
    }

    public void addMoon(Moon moon) {
        this.moons.add(moon);
    }

    public ArrayList<Moon> getMoons() {
        return this.moons;
    }

    public boolean equals(Object obj) {
        if (this == obj) {
            return true;
        }

        if (!(obj instanceof Planet p)) {
            return false;
        }

        return this.designation.equals(p.getDesignation()) && this.orbitTime == p.getOrbitTime();
    }

    @Override
    public String toString() {
        return "Planet{" +
                "orbitTime=" + orbitTime +
                ", moons=" + moons +
                ", designation='" + designation + '\'' +
                '}';
    }
}
