public class Main {
    public static int[] fibonacciSequence(int n) {
        if (n == 0) {
            return new int[]{0};
        } else if (n == 1) {
            return new int[]{0, 1};
        } else {
            int[] sequence = fibonacciSequence(n - 1);
            int[] newSequence = new int[sequence.length + 1];
            System.arraycopy(sequence, 0, newSequence, 0, sequence.length);
            newSequence[newSequence.length - 1] = newSequence[newSequence.length - 2] + newSequence[newSequence.length - 3];
            return newSequence;
        }
    }
}
